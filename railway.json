{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --worker-class sync --timeout 120 --access-logfile - --error-logfile - wsgi:app"
  },
  "plugins": [],
  "variables": {
    "ENVIRONMENT": "production",
    "CORS_ORIGINS": "http://localhost:3000"
  }
}
