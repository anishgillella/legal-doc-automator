{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --worker-class sync --timeout 120 --access-logfile - --error-logfile - --chdir /app wsgi:app"
  },
  "plugins": [],
  "variables": {
    "ENVIRONMENT": "production",
    "API_PORT": "$PORT",
    "CORS_ORIGINS": "http://localhost:3000",
    "OPENROUTER_API_KEY": "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"
  }
}
